<idea-plugin version="2">
  <id>org.limitium.mathfolding</id>
  <name>Math folding</name>
  <version>1.0</version>
  <vendor email="limitium@gmail.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description><![CDATA[
      <p>Folds Math static methods into mathematical symbols.<br /> Examples:</p>
<ul>
<li>
  <code>Math.sqrt(4)</code> into <code>√4</code>
</li>
  <li>
    <code>Math.pow(4 - 10, 3)</code> into <code>(4 - 10)³</code>
</li>
<li>
  <code>Math.sqrt(Math.abs(10 - a) + Math.cbrt(5 + Math.pow(5, 3)))</code> into  <code>√(|10 - a| + ∛(5 + 5³))</code>
</li>

</ul>
    ]]></description>

  <change-notes><![CDATA[
      First version! Please send feedback to limitium@gmail.com
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <lang.foldingBuilder language="JAVA" implementationClass="org.limitium.mathfolding.MathFoldingBuilder"/>
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>